<section class="works-2 pt-large pb-large" data-scroll-section>
    <div class="container">
        <div class="row gx-0 pb-medium pb-md-large">
            <div class="offset-md-1 col-md-9">
                <h2 class="xl fadeIn">
                    Wybrane prace
                </h2>
            </div>
        </div>
        <div class="works-grid">
            {% for post in collections.realizacje.slice(0,4) %}
            <div class="works-grid-item">
                <a href="{{ post.url }}">
                    <div class="row gx-0 flex-row-reverse archive-post pb-small pb-md-large">
                      <div class="col-md-1"></div>
                      <div class="col-md-5">
                        <div class="parallax-wrap aspect_16-9 fadeIn">
                          <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" loading="lazy"/>
                        </div>
                      </div>

                      <div class="offset-md-1 col-md-5 fadeIn">
                        <p class="archive-post-date mt-4 mb-2"> 
                            <small>{{ post.data.description}}</small> 
                        </p>
                        <h2 class="archive-post-title h4 mt-0">
                            {{ post.data.title }}
                        </h2>
                      </div>
                      
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>